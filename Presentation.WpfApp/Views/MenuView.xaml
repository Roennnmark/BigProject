<UserControl x:Class="Presentation.WpfApp.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.WpfApp.Views"
             
             xmlns:viewmodels="clr-namespace:Presentation.WpfApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:MenuViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label Content="MENU MENU MENU MENU" />

            <Button Content="Navigate To Add Player" Command="{Binding NavigateToAddPlayerCommand}" />
            <Button Content="Navigate To Player List" Command="{Binding NavigateToPlayerListCommand}" />

        </StackPanel>
    </Grid>
</UserControl>
